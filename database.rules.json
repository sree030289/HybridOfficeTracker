{
  "rules": {
    "users": {
      "$userId": {
        ".read": "true",
        ".write": "true",
        "attendanceData": {
          "$dateStr": {
            ".validate": "newData.isString() && (newData.val() === 'office' || newData.val() === 'wfh' || newData.val() === 'leave')"
          }
        },
        "plannedDays": {
          "$dateStr": {
            ".validate": "newData.isString() && (newData.val() === 'office' || newData.val() === 'wfh' || newData.val() === 'leave')"
          }
        },
        "userData": {
          ".validate": "newData.hasChildren(['companyName', 'trackingMode', 'country'])"
        },
        "settings": {
          ".validate": "newData.hasChildren(['monthlyTarget', 'targetMode'])",
          "monthlyTarget": {
            ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 100"
          },
          "targetMode": {
            ".validate": "newData.isString() && (newData.val() === 'days' || newData.val() === 'percentage')"
          }
        },
        "lastUpdated": {
          ".validate": "newData.isNumber()"
        }
      }
    },
    "downloads": {
      ".write": true,
      ".read": true
    },
    "page_views": {
      ".write": true,
      ".read": true
    },
    "user_engagement": {
      ".write": true,
      ".read": true
    },
    "slideshow_interactions": {
      ".write": true,
      ".read": true
    },
    "test_tracking": {
      ".write": true,
      ".read": true
    },
    "logs": {
      "$userId": {
        ".read": "true",
        ".write": "true",
        "$logId": {
          ".validate": "newData.hasChildren(['level', 'message', 'timestamp'])"
        }
      }
    }
  }
}